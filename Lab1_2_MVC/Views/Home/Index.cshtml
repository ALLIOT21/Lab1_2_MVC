@using Lab1_2_MVC.Data.Entities;
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <table class="table">
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Отчество</th>
            <th>Дата рождения</th>
            <th>Пол</th>
            <th>Дата выдачи</th>
            <th>Место выдачи</th>
        </tr>
        @foreach (var item in Model.Persons)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)<br />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)<br />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patronymic)<br />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)<br />
                </td>
                <td>
                    @(item.Gender == Gender.Male ? "Мужской" : "Женский")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IssueDate)<br />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IssuePlace)<br />
                </td>
            </tr>
        }
    </table>
</div>

<form method="post" asp-action="Create">
    <div class="form-group col-sm-2">
        <label asp-for="Person.Name">Имя</label>
        <input asp-for="Person.Name" class="form-control" /><br />
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="Person.Surname">Фамилия</label>
        <input asp-for="Person.Surname" class="form-control" /><br />
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="Person.Patronymic">Отчество</label>
        <input asp-for="Person.Patronymic" class="form-control" /><br />
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="Person.BirthDate">Дата рождения</label>
        <input asp-for="Person.BirthDate" class="form-control" type="date" /><br />
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="Person.Gender">Пол</label>
        <select asp-for="Person.Gender" asp-items="@((List<SelectListItem>)ViewData["Genders"])" class="form-control ">
        </select><br />
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="Person.IssueDate">Дата выдачи</label>
        <input asp-for="Person.IssueDate" class="form-control" type="date"/><br />
    </div>
    <div class="form-group col-sm-2">
        <label asp-for="Person.IssuePlace">Место выдачи</label>
        <input asp-for="Person.IssuePlace" class="form-control" /><br />
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>
